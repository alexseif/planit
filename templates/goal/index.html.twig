{% extends 'base.html.twig' %}

{% block title %}{{ 'entity.goal'|trans }}{% endblock %}
{% block card_actions %}
    <a href="{{ path('app_goal_new') }}" class="btn btn-outline-primary">{{ 'actions.new'|trans }}</a>
{% endblock %}
{% block body %}
    <table class="table">
        <thead>
        <tr>
            <th>{{ 'entity.name'|trans }}</th>
            <th>{{ 'entity.professional'|trans }}</th>
            <th>{{ 'actions.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for goal in goals %}
            <tr>
                <td>{{ goal.name }}</td>
                <td>{{ goal.professional ? 'Yes' : 'No' }}</td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <a href="{{ path('app_goal_show', {'id': goal.id}) }}"
                           class="btn btn-link">{{ 'actions.show'|trans }}</a>
                        <a href="{{ path('app_goal_edit', {'id': goal.id}) }}"
                           class="btn btn-link">{{ 'actions.edit'|trans }}</a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">{{ 'messages.no_results'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
