{% extends 'base.html.twig' %}

{% block title %}{{ 'entity.goal'|trans }} #{{ goal.id }}{% endblock %}
{% block card_actions %}
    <a class="btn btn-link" href="{{ path('app_goal_index') }}">{{ 'actions.back'|trans }}</a>

    <a class="btn btn-outline-primary" href="{{ path('app_goal_edit', {'id': goal.id}) }}">{{ 'actions.edit'|trans }}</a>

    {{ include('goal/_delete_form.html.twig') }}
{% endblock %}
{% block body %}
    <table class="table">
        <tbody>
        <tr>
            <th>{{ 'entity.name'|trans }}</th>
            <td>{{ goal.name }}</td>
        </tr>
        <tr>
            <th>{{ 'entity.professional'|trans }}</th>
            <td>{{ goal.professional ? 'Yes' : 'No' }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}
